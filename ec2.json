{
  "AWSTemplateFormatVersion": "2010-09-09",

  "Description": "\"AWS CloudFormation Sample Template.",
  "Resources": {
    "EC2Instance": {
      "Type": "AWS::EC2::Instance",
      "Properties": {
        "AvailabilityZone": "us-east-1b",
        "IamInstanceProfile": "arn:aws:iam::220914495967:instance-profile/PushImage2ECR",
        "ImageId": "ami-076b1b7bde512698c",
        "InstanceType": "t2.micro",
        "KeyName": "CloudtierWebServerLC",
        "SecurityGroupIds": "sg-0941596b98492e7b6",
        "SecurityGroups": "ContainerEC2",
        "SubnetId": "subnet-059bb2e4f48425b34"
      }
    }
  },
  "Outputs": {
    "WebsiteURL": {
      "Value": {
        "Fn::Join": [
          "",
          [
            "http://",
            { "Fn::GetAtt": [ "WebServer", "PublicDnsName" ] },
            "/wordpress"
          ]
        ]
      },
      "Description": "WordPress Website"
    }
  }
}
